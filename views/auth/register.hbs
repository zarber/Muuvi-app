<div class="wrapper">
    <div class="title"><img src="/images/Muuvi-logo.png" alt="logo"></div>
    <form action="/auth/register" method="POST" >
      <h1>Rekisteröityminen</h1>
        <div class="field">
          <input type="firstname" name="firstname"/>
          <label> Etunimi </label>
        </div>
        <div class="field">
          <input type="lastname" name="lastname"/>
          <label> Sukunimi </label>
        </div>
        <div class="field">
          <input  type="email" name="email" />
          <label> Sähköposti</label>
        </div>
        <div class="field" id="password">
          <input type="password" name="password"/>
          <label> Salasana</label>
          <p><i class="fa-solid fa-circle-exclamation"></i> Käytä väh. 8 merkkiä, joista yksi iso kirjain, yksi numero ja yksi erikoismerkki</p>
        </div>
        <label for='role' class="roles">Valitse rooli:
          <select name='role' id='role'>
          <option value='patient' selected>Potilas</option>
          <option value='nurse'>Hoitaja</option>
          </select>
        </label>
        <div class="field">
          <input type="submit" value="Tallenna">
        </div>
      {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
      {{/if}}
    </form>
</div>